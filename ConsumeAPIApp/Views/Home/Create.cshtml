@model ProductResponseModel;


@{
    if(TempData["errorMessage"] != null)
    {
    <p style="color : red;">
            
            @TempData["errorMessage"]?.ToString();
        
    </p>
    }
}

<form asp-action="Create" asp-controller="Home" method="post">
    <h3>Urun Ekle</h3>
    <label>Ürün Adı :</label>
    <input type="text" asp-for="@Model.ProductName" />
    <br />
    <hr />
     <label>Ürün Fiyatı :</label>
    <input type="text" asp-for="@Model.Price" />
    <br />
    <hr />
     <label>Ürün Stogu:</label>
    <input type="text" asp-for="@Model.Stock" />
    <br />
    <hr />

    <div>
        <a asp-action="Index" asp-controller="Home">Geri Don</a>
        <button type="submit">Ekle</button>
    </div>
</form>